<mvc:View
	controllerName="sap.ui.demo.fiori2.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{viewData>DetailViewData/PuzzelGroupData/Name}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<f:Avatar
								src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}"
								displaySize="S"
								displayShape="Square"
								class="sapUiTinyMarginEnd"/>
							<m:Title text="{viewData>DetailViewData/PuzzelGroupData/Name}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>

				<navigationActions>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Enter Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://exit-full-screen"
						press=".handleExitFullScreen"
						tooltip="Exit Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://decline"
						press=".handleClose"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
				</navigationActions>

				<!-- <actions>
					<m:ToggleButton
						text="Edit"
						type="Emphasized"
						press=".onEditToggleButtonPress"/>
					<m:Button
						text="Delete"
						type="Transparent"/>
					<m:Button
						text="Copy"
						type="Transparent"/>
					<m:Button
						icon="sap-icon://action"
						type="Transparent"/>
				</actions> -->
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar
					src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}"
					displaySize="L"
					displayShape="Square"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.Costs}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/Costs}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.NumberOfSheets}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/NumberOfSheets}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.NumberOfOrders}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/NumberOfOrders}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.OrdersPerSheet}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/OrdersPerSheet}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.OrderedQuantity}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/OrderedQuantity}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.ProducedQuantity}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/ProducedQuantity}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.WasteCosts}"/>
					<m:Text text="{viewData>DetailViewData/PuzzelGroupData/WasteCosts}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detail.headerContent.WasteQuantity}"/>
					<m:ObjectNumber number="{viewData>DetailViewData/PuzzelGroupData/WasteQuantity}" emphasized="false"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>
	
			<ObjectPageSection title="{i18n>detail.sheet.sheetSVG}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<core:HTML id="sheetPanel"></core:HTML>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="{i18n>detail.sheet.orders}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="suppliersTable"
								items="{path : 'viewData>DetailViewData/OrderList/Order'}">
								<m:columns>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.KaufPos}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.Planauftrag}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.Material}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.OrderedQuantity}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.ProducedQuantity}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.WasteQuantity}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.WasteCosts}"/>
									</m:Column>
									<m:Column demandPopin="true" minScreenWidth="phone">
										<m:Text text="{i18n>detail.table.orders.Aequivalence}"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onSupplierPress">
										<m:cells>
											<m:ObjectIdentifier text="{viewData>KaufPos}"/>
											<m:Text text="{viewData>Planauftrag}" />
											<m:Text text="{viewData>Material}" />
											<m:Text text="{viewData>OrderedQuantity}" />
											<m:Text text="{viewData>ProducedQuantity}" />
											<m:Text text="{viewData>WasteQuantity}" />
											<m:Text text="{viewData>WasteCosts}" />
											<m:Text text="{viewData>Aequivalence}" />
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save"/>
				<m:Button type="Reject" text="Cancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>