<mvc:View
	controllerName="sap.ui.demo.fiori2.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>master.title.Sheets}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
				</OverflowToolbar>

				<Table 
					mode="MultiSelect"
					alternateRowColors="true"
					selectionChange="onSelectionChange"
					id="productsTable"
					inset="false"
					items="{
						path: 'viewData>/Sheets',
						sorter : {
							path : 'MasterViewData/PuzzelGroupName',
							group : true
						}
					}"
					class="sapFDynamicPageAlignContent">
					<columns>
						<Column demandPopin="true" minScreenWidth="phone">
							<Text text="{i18n>master.table.column.Name}"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="phone">
							<Text text="{i18n>master.table.column.Costs}"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="phone">
							<Text text="{i18n>master.table.column.NumberOfCopies}"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="phone">
							<Text text="{i18n>master.table.column.WasteAmount}"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="phone">
							<Text text="{i18n>master.table.column.WasteCosts}"/>
						</Column>
						<Column demandPopin="true" minScreenWidth="phone">
							<Text text="{i18n>master.table.column.CPI}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation"  press=".onListItemPress">
							<cells>
								<ObjectIdentifier title="Bogen {viewData>Name}" />
								<Text text="{
											path: 'viewData>MasterViewData/Costs',
											formatter: '.formatter.formatToTwoNumbers'
										}" />
								<Text text="{viewData>MasterViewData/Auflage}" />
								<Text text="{viewData>MasterViewData/WasteAmount}" />
								<Text text="{viewData>MasterViewData/WasteCosts}" />
								<Text text="{viewData>MasterViewData/CPI}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>