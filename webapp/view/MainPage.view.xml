<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:f="sap.f" xmlns="sap.m" 
    controllerName="lp.fscomposer.controller.MainPage">
    <Page title="FoldingSheet Composer">
        <headerContent>
            <Toolbar>
                <content>
                    <u:FileUploader
                        id="fileUploader"
                        change="handleValueChange"
                        style="Emphasized"
                        fileType="xml"
                        buttonOnly="true"
                        buttonText="Upload file"
                        maximumFileSize="1"
                        icon="sap-icon://upload"
                        placeholder="Choose a file for Upload..." />
                </content>
            </Toolbar>
        </headerContent>
        <content>
            <f:FlexibleColumnLayout  id="idAppControl" layout="{app>/layout}" />
        </content>
    </Page>
</core:View>